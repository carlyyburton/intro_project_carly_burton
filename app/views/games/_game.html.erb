<div id="<%= dom_id game %>">
  <p>
    <strong>Title:</strong>
    <%= game.title %>
  </p>

  <p>
    <strong>Sale price:</strong>
    <%= game.sale_price %>
  </p>

  <p>
    <strong>Normal price:</strong>
    <%= game.normal_price %>
  </p>

  <p>
    <strong>Release date:</strong>
    <%= game.release_date %>
  </p>

  <p>
    <strong>Steam rating percent:</strong>
    <%= game.steam_rating_percent %>
  </p>

  <p>
    <strong>Steam rating count:</strong>
    <%= game.steam_rating_count %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= game.image %>
  </p>

</div>

<div class="sale">
  <h3>Games Currently On Sale:</h3>
  <br>
  <ul>
    <% @games = Kaminari.paginate_array(@games).page(params[:page]).each do |game| %>
      <li><%= game.title %></li>
      <li>Sale Price: $<%= game.sale_price %></li>
      <li>Normal Price: $<%= game.normal_price %></li>
      <li>Savings: <%= number_with_precision(game.savings, precision: 1) %>%</li>
      <li>Release Date: <%= Time.at(game.release_date).strftime("%m/%d/%Y") %></li>
      <li>Steam Rating: <%= game.steam_rating_percent %></li>
      <li>Steam Rating Count: <%= game.steam_rating_count %></li>
      <span class="thumbnail"><%= image_tag game.image, style: 'width: 300px' %></span>
      <br>
      <br>
    <% end %>
  </ul>
