<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <h2 class="navbar-text">PC Game Sales</h2><br>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <span class="navbar-text"><%= link_to "Home", games_path %></span>
        </li>
        <li class="nav-item">
          <span class="navbar-text"><%= link_to "Games On Sale", game_sales_path %></span>
        </li>
        <li class="nav-item">
          <span class="navbar-text"><%= link_to "Free Games", free_games_path %></span>
        </li>
        <li class="nav-item">
          <span class="navbar-text"><%= link_to "Faker", faker_games_path %></span>
        </li>

      </ul>
      <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search By Game Title" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>

<div class="sale">
  <h3>Games Currently On Sale: <%= Game.count %></h3>
  <br>
<ul>
  <% @games.each do |game| %>
    <li><span><%= game.title %></span></li>
    <li>Sale Price: $<%= game.sale_price %></li>
    <li>Normal Price: $<%= game.normal_price %></li>
    <li>Savings: <%= number_with_precision(game.savings, precision: 1) %>%</li>
    <li>Release Date: <%= Time.at(game.release_date).strftime("%m/%d/%Y") %></li>
    <li>Steam Rating: <%= game.steam_rating_percent %></li>
    <li>Steam Rating Count: <%= game.steam_rating_count %></li>
    <span class="thumbnail"><%= image_tag game.image, style: 'max-width: 300px' %></span>
    <li>&nbsp</li>
  <% end %>
</ul>
<%= paginate @games %>
</div>
